{
  "name": "@namespacelabs/actions-toolkit",
  "version": "0.1.0",
  "description": "GitHub Actions toolkit for Namespace",
  "type": "module",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/namespacelabs/nscloud-actions-toolkit.git"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.6.2",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./spacectl": {
      "import": {
        "types": "./dist/spacectl.d.mts",
        "default": "./dist/spacectl.mjs"
      },
      "require": {
        "types": "./dist/spacectl.d.cts",
        "default": "./dist/spacectl.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.20.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.1.4"
  }
}
